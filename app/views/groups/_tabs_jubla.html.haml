- if @group.kind_of?(Group::Flock) && can?(:approve_population, @group)
  - tab tab_population_label, population_group_path(@group)

- if @group.census? && can?(:evaluate_census, @group)
  - tab "Statistik", census_evaluation_path(@group) 

- if @group.event_types.include?(Event::Course) && can?(:index_event_course_conditions, @group)
  - tab "Kursbestimmungen", group_event_course_conditions_path(@group) 
