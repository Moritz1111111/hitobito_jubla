
- if group.kind_of?(Group::Flock) && can?(:approve_population, group)
  - bar.tab tab_population_label(group), population_group_path(group)

- if group.census? && can?(:evaluate_census, group)
  - bar.tab "Statistik", census_evaluation_path(group), [censuses_path, group_member_counts_path(group)]

- if group.event_types.include?(Event::Course) && can?(:index_event_course_conditions, group)
  - bar.tab "Kursbestimmungen", group_event_course_conditions_path(group), [group_event_course_conditions_path(group)]
