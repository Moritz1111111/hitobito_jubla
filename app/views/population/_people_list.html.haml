%table.table
  - @groups.each do |group|
    %tr
      %td
        %br/
        %h2= group.to_s
    - @groups_people[group.id].each do |person| 
      %tr
        %td
          = person.to_s
        %td
          = person.roles.first.to_s
        %td
          = l(person.birthday)
        %td
          = gender_label(person.gender)
        %td
          = person_edit_link(person)
        %td
          = person_data_complete?(person) ? '' : badge_invalid
        %td
