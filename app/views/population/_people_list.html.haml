- @groups.each do |group|
  %h2= group.to_s
  %table.table.table-striped
    - @groups_people[group.id].each do |person| 
      %tr
        %td
          %strong
            - if can?(:show, person)
              = link_to(person.to_s, group_person_path(group, person))
            - else
              = person.to_s
        %td
          = person.roles.first.to_s
        %td
          = person_birthday(person)
        %td
          = person_gender(person)
        %td
          = person_edit_link(person, group) if can?(:edit, person)

